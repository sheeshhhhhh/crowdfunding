generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String

  crodfundPosts CrowdFundPost[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model refreshToken {
  id        String   @id @default(cuid())
  token     String
  userId    String

  expiresAt DateTime
}

model CrowdFundPost {
  id          String   @id @default(cuid())
  userId      String
  HeaderImage String
  title       String

  // add a rich text editor
  description String
  body        String

  goal        Int // money goal
  current     Int // current money
  
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}